{{- /* layouts/private/list.json.json */ -}}
[
  {{- $pages := where .Pages "Type" "private-page" -}}
  {{- range $i, $p := $pages -}}
    {{- if $i }},{{ end -}}
    {
      "title": {{ $p.Title | jsonify }},
      "permalink": {{ $p.Permalink | jsonify }},
      "summary": {{ $p.Summary | plainify | jsonify }},
      "date": {{ $p.Date | time.Format "2006-01-02" | jsonify }}
    }
  {{- end -}}
]
